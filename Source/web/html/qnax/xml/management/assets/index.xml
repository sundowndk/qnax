<sui>
	<container width="100%" height="100%" title="Locations" icon="Icon32Edit" stylesheet="SUIContainerNoBorder">		
		<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
			<panel size="*">
				<listview tag="assets" width="100%" height="100%" treeview="true" treeviewLinkColumns="id:type">
					<column tag="id"/>																				
					<column tag="name" label="Name" width="300px" visible="true" />
					<column tag="tag" label="Tag" width="300px" visible="true" />
					<column tag="location" label="Location" width="300px" visible="true" />
					<column tag="type" />
					<column tag="type2" />
				</listview>
			</panel>
			<panel size="100px">
				<button tag="assetscreate" stylesheet="SUIButtonSmall" width="100%" label="Create" disabled="true" />
				<button tag="assetsedit" stylesheet="SUIButtonSmall" width="100%" label="Edit" disabled="true" />
				<button tag="assetsdelete" stylesheet="SUIButtonSmall" width="100%" label="Delete" disabled="true" />				
			</panel>
		</layoutbox>				
	</container>	
</sui>
