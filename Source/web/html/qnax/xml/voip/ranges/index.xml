<sui>
	<container width="100%" height="100%" title="Ranges" icon="Icon32Edit" stylesheet="SUIContainerNoBorder">		
		<tabview>
			<tab label="Groups" selected="true">
				<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
					<panel size="*">
						<listview tag="rangegroups" width="100%" height="100%">
							<column tag="id" />											
							<column tag="name" label="Name" width="300px" visible="true" />
						</listview>
					</panel>
					<panel size="100px">
						<button tag="rangegroupscreate" stylesheet="SUIButtonSmall" width="100%" label="Create" disabled="false" />
						<button tag="rangegroupsedit" stylesheet="SUIButtonSmall" width="100%" label="Edit" disabled="true" />
						<button tag="rangegroupsdelete" stylesheet="SUIButtonSmall" width="100%" label="Delete" disabled="true" />				
					</panel>
				</layoutbox>								
			</tab>
			<tab label="Ranges">
				<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
					<panel size="*">
						<listview tag="ranges" width="100%" height="100%" treeview="true" treeviewLinkColumns="id:countrycodeid">					
							<column tag="id" />											
							<column tag="name" label="Name" width="300px" visible="true" />
							<column tag="countrycodeid" />
							<column tag="dialcodes" label="Dialcodes" condense="value" width="300px" visible="true" />
							<column tag="alternativnames" label="Alt. Names" condense="value" width="200px" visible="true" />
							<column tag="type" />
						</listview>
					</panel>
					<panel size="100px">
						<button tag="rangescreate" stylesheet="SUIButtonSmall" width="100%" label="Create" disabled="true" />
						<button tag="rangesedit" stylesheet="SUIButtonSmall" width="100%" label="Edit" disabled="true" />
						<button tag="rangesdelete" stylesheet="SUIButtonSmall" width="100%" label="Delete" disabled="true" />				
					</panel>
				</layoutbox>				
			</tab>
		</tabview>
	</container>	
</sui>
