<sui>
	<canvas width="800px" height="600px" canScroll="false">		
		<container tag="container" title="Edit user" icon="Icon32Edit" stylesheet="SUIContainerModal">
			<layoutbox type="horizontal" stylesheet="LayoutboxNoborder">		
				
				<panel size="*">
					<tabview>
						<tab label="Details" selected="true">
							<layoutbox type="horizontal">
								<panel size="45px">
									<layoutbox type="vertical">
										<panel size="100px">
											<label text="Name" />
										</panel>
										<panel size="*">
											<textbox tag="name" width="100%" />
										</panel>					
									</layoutbox>
								</panel>				
								<panel size="45px">
									<layoutbox type="vertical">
										<panel size="100px">
											<label text="CountryCode" />
										</panel>
										<panel size="*">
											<textbox tag="countrycodename" width="100%" disabled="true" />
										</panel>					
									</layoutbox>
								</panel>		
								<panel size="45px">
									<layoutbox type="vertical">
										<panel size="100px">
											<label text="Type" />
										</panel>
										<panel size="*">
											<dropbox tag="type" width="100%">
												<item label="Landline" value="Landline" />
												<item label="Mobile" value="Mobile" />
												<item label="Satellite" value="Satellite" />
											</dropbox>
										</panel>					
									</layoutbox>
								</panel>
								<panel size="*">
									<layoutbox type="vertical">
										<panel size="100px">
											<label text="Dialcodes" />
										</panel>
										<panel size="*">
											<listview tag="dialcodes" width="100%" height="100%">
												<column tag="id" />
												<column tag="value" label="" width="200px" visible="true" />
											</listview>
										</panel>					
										<panel size="80px">
											<button tag="dialcodesadd" stylesheet="SUIButtonSmall" width="100%" label="Add" disabled="falses" />
											<button tag="dialcodesedit" stylesheet="SUIButtonSmall" width="100%" label="Edit" disabled="true" />
											<button tag="dialcodesremove" stylesheet="SUIButtonSmall" width="100%" label="Remove" disabled="true" />
										</panel>
									</layoutbox>
								</panel>									
								
							</layoutbox>
						</tab>
						<tab label="Prices">
							<layoutbox type="horizontal">
								<panel size="*">
									<layoutbox type="vertical">
										<panel size="100px">
											<label text="CostPrices" />
										</panel>
										<panel size="*">
											<listview tag="costprices" width="100%" height="100%" disabled="true">
												<column tag="id" />
												<column tag="type" label="Type" width="80px" visible="true" />
												<column tag="validfrom" label="Valid from" width="80px" visible="true" />
												<column tag="validto" label="Valid to" width="80px" visible="true" />
												<column tag="price" label="Price" width="100px" visible="true" />												
												<column tag="weekdays" label="Weekdays" width="150px" visible="false" />	
											</listview>
										</panel>					
										<panel size="80px">
											<button tag="costpricesadd" stylesheet="SUIButtonSmall" width="100%" label="Add" disabled="true" />
											<button tag="costpricesedit" stylesheet="SUIButtonSmall" width="100%" label="Edit" disabled="true" />
											<button tag="costpricesremove" stylesheet="SUIButtonSmall" width="100%" label="Remove" disabled="true" />
										</panel>
									</layoutbox>
								</panel>									
								<panel size="*">
									<layoutbox type="vertical">
										<panel size="100px">
											<label text="RetailPrices" />
										</panel>
										<panel size="*">
											<listview tag="retailprices" width="100%" height="100%" disabled="true">
												<column tag="id" />
												<column tag="type" label="Type" width="80px" visible="true" />
												<column tag="validfrom" label="Valid from" width="80px" visible="true" />
												<column tag="validto" label="Valid to" width="80px" visible="true" />
												<column tag="price" label="Price" width="100px" visible="true" />												
												<column tag="weekdays" label="Weekdays" width="150px" visible="false" />	
											</listview>
										</panel>					
										<panel size="80px">
											<button tag="retailpricesadd" stylesheet="SUIButtonSmall" width="100%" label="Add" disabled="true" />
											<button tag="retailpricesedit" stylesheet="SUIButtonSmall" width="100%" label="Edit" disabled="true" />
											<button tag="retailpricesremove" stylesheet="SUIButtonSmall" width="100%" label="Remove" disabled="true" />
										</panel>
									</layoutbox>										
								</panel>																	
							</layoutbox>
						</tab>
					</tabview>
				</panel>			
				<panel size="55px">
					<layoutbox type="vertical">
						<panel size="*">												
						</panel>
						<panel size="210px">
							<button tag="save" label="Save" width="100px" disabled="true" />
							<button tag="close" label="Close" width="100px" />
						</panel>
					</layoutbox>
				</panel>
			</layoutbox>
		</container>
	</canvas>
</sui>



