<sui>
	<container width="100%" height="100%" title="CountryCodes" icon="Icon32Edit">		
		<layoutbox type="vertical" width="100%" height="100%">
			<panel size="*">
				<listview tag="countrycodes" width="100%" height="100%">
					<column tag="id" />						
					<column tag="name" label="Name" width="200px" visible="true" />
					<column tag="alteernativname" label="Alt. Names" width="200px" visible="true" />
					<column tag="dialcodes" label="Dialcodes" width="200px" visible="true" />										
				</listview>
			</panel>
			<panel size="100px">
				<button tag="create" stylesheet="SUIButtonSmall" width="100%" label="Create" />
				<button tag="edit" stylesheet="SUIButtonSmall" width="100%" label="Edit" />
				<button tag="delete" stylesheet="SUIButtonSmall" width="100%" label="Delete" />								
			</panel>
		</layoutbox>				
	</container>	
</sui>
