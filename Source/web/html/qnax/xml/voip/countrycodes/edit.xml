<sui>
	<container width="800px" height="460px" title="Edit countrycode" icon="Icon32Edit">
		<layoutbox type="horizontal">			
			<panel size="45px">
				<layoutbox type="vertical">
					<panel size="100px">
						<label text="Name" />
					</panel>
					<panel size="*">
						<textbox tag="name" width="100%" />
					</panel>					
				</layoutbox>
			</panel>
			<panel size="*">
				<layoutbox type="vertical">
					<panel size="100px">
						<label text="Alt. names" />
					</panel>
					<panel size="*">
						<listview tag="subscriptions" width="100%" height="100%">
							<column tag="id" />
							<column tag="title" title="" width="200px" visible="true" />
						</listview>
					</panel>					
					<panel size="80px">
						<button tag="addalternativname" stylesheet="SUIButtonSmall" width="100%" label="Add" />
						<button tag="editalternativname" stylesheet="SUIButtonSmall" width="100%" label="Edit" />						
						<button tag="removealternativname" stylesheet="SUIButtonSmall" width="100%" label="Remove" />
					</panel>
				</layoutbox>
			</panel>
			<panel size="*">
				<layoutbox type="vertical">
					<panel size="100px">
						<label text="Dialcodes" />
					</panel>
					<panel size="*">
						<listview tag="subscriptions" width="100%" height="100%">
							<column tag="id" />
							<column tag="title" title="" width="200px" visible="true" />
						</listview>
					</panel>					
					<panel size="80px">
						<button tag="adddialcode" stylesheet="SUIButtonSmall" width="100%" label="Add" />
						<button tag="editdialcode" stylesheet="SUIButtonSmall" width="100%" label="Edit" />
						<button tag="removedialcode" stylesheet="SUIButtonSmall" width="100%" label="Remove" />
					</panel>
				</layoutbox>
			</panel>			
			<panel size="45px">
				<layoutbox type="vertical">
					<panel size="*">												
					</panel>
					<panel size="220px">
						<button tag="save" label="Save" width="100px" disabled="true"/>
						<button tag="close" label="Close" width="100px" />
					</panel>
				</layoutbox>
			</panel>
		</layoutbox>
	</container>
</sui>

