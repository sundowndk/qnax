<sui>	
	<canvas width="800px" height="400px" canScroll="false">	
		<container tag="container" icon="Icon32Edit">
			<tabview>
				<tab label="Details" selected="true">
					<layoutbox type="horizontal">			
						<panel size="*">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Name" />
								</panel>
								<panel size="*">
								<textbox tag="name" width="100%" />
								</panel>					
							</layoutbox>
						</panel>
						<panel size="55px">
							<layoutbox type="vertical">
								<panel size="*">												
								</panel>
								<panel size="210px">
									<button tag="save" label="Save" width="100px" />
									<button tag="close" label="Close" width="100px" />
								</panel>
							</layoutbox>
						</panel>
					</layoutbox>
				</tab>
				<tab label="Subscriptions">
				</tab>
			</tabview>
		</container>
	</canvas>
</sui>

