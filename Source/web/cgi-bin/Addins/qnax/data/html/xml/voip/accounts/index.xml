<sui>
	<container width="100%" height="100%" title="Accounts" icon="Icon32Edit" stylesheet="SUIContainerNoBorder">		
		<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder" treeview="true" treeviewLinkColumns="id:type">
			<panel size="*">
				<listview tag="accounts" width="100%" height="100%">					
					<column tag="id"/>																				
					<column tag="name" label="Name" width="300px" visible="true" />					
					<column tag="type"/>					
					<column tag="numbers" label="Numbers" condense="value" width="200px" visible="true" />
				</listview>
			</panel>
			<panel size="100px">
				<button tag="accountscreate" stylesheet="SUIButtonSmall" width="100%" label="Create" disabled="true" />
				<button tag="accountsedit" stylesheet="SUIButtonSmall" width="100%" label="Edit" disabled="true" />
				<button tag="accountsdelete" stylesheet="SUIButtonSmall" width="100%" label="Delete" disabled="true" />								
			</panel>
		</layoutbox>								
	</container>	
</sui>

